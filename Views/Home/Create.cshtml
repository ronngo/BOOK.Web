@model CreateBook
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">


    <form asp-controller="Home" asp-action="create" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="NameBook"></label>
            </div>
            <div class="col-9">
                <input asp-for="NameBook" class="form-control" />
                <span asp-validation-for="NameBook" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="NameAuthor"></label>
            </div>
            <div class="col-9">
                <input asp-for="NameAuthor" class="form-control" />
                <span asp-validation-for="NameAuthor" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-9">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="Date"></label>
            </div>
            <div class="col-9">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="Amount"></label>
            </div>
            <div class="col-9">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>
</div>

